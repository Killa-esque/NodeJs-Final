<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <img src="<%= user.avatar %>" class="card-img-top" alt="User Avatar">
          <div class="card-body">
            <h5 class="card-title">
              <%= user.name %>
            </h5>
            <p class="card-text">
              <%= user.email %>
            </p>
            <!-- Thêm thông tin người dùng khác tại đây -->
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">User Details</h5>
            <!-- Thêm chi tiết người dùng tại đây -->
            <button id="resendEmail" class="btn btn-primary mt-3">Resend Activation Email</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript; choose one of the two! -->
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    document.getElementById('resendEmail').addEventListener('click', function () {
      axios.post('/user/resend-activation/<%= user._id %>')
        .then(function (response) {
          console.log(response);
          // Hiển thị thông báo thành công
        })
        .catch(function (error) {
          console.error(error);
          // Hiển thị thông báo lỗi
        });
    });
  </script>
</body>

</html>
