<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tìm kiếm Sản phẩm và Khách hàng</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="./public/stylesheets/sale.css">
</head>

<body>
  <div class="container-fluid mt-5">
    <div class="row">
      <!-- Product Search Section -->
      <section class="col-md-8">
        <h2>Tìm kiếm Sản phẩm</h2>
        <input type="text" class="form-control" placeholder="Nhập tên sản phẩm" id="productSearchInput"
          oninput="searchProduct(this.value)">
        <span id="productSearchResults"></span>
        <div id="cart"></div>
      </section>

      <!-- Customer Search Section -->
      <section class="col-md-4">
        <h2>Tìm kiếm Khách hàng</h2>
        <input type="number" class="form-control" placeholder="Nhập số điện thoại khách hàng" id="customerSearchInput"
          oninput="searchCustomer(this.value)">
        <div id="customerSearchResults"></div>

        <div class="card">
          <div class="card-body">
            <!-- Replaced IDs with classes for repeated elements -->
            <div class="form-group">
              <label for="phoneNumber">Số điện thoại</label>
              <input type="text" class="form-control" id="phoneNumber">
            </div>
            <div class="form-group">
              <label for="fullName">Họ và tên</label>
              <input type="text" class="form-control" id="fullName">
            </div>
            <div class="form-group">
              <label for="address">Địa chỉ</label>
              <input type="text" class="form-control" id="address">
            </div>
          </div>
        </div>

        <div class="mt-4">
          <div class="money d-flex justify-content-between">
            <label>Tổng số tiền:</label>
            <span id="totalAmount"></span>
          </div>

          <!-- Other money-related elements -->
          <div class="money d-flex justify-content-between align-items-center mt-2">
            <label for="discount">Giảm giá (%):</label>
            <input type="number" id="discount" class="form-control w-25" placeholder="0"
              oninput="calculateFinalAmount()">
          </div>
          <div class="money d-flex justify-content-between mt-2">
            <label>Khách cần trả:</label>
            <span id="finalAmount"></span>
          </div>
          <div class="money d-flex justify-content-between align-items-center mt-2">
            <label for="amountReceived">Tiền đã nhận</label>
            <input type="text" class="form-control w-25" id="amountReceived">
          </div>
          <div class="money d-flex justify-content-between align-items-center mt-2">
            <label for="changeAmount">Tiền thừa trả lại</label>
            <input type="text" class="form-control w-25" id="changeAmount">
          </div>

          <div class="d-grid mt-3">
            <button class="btn btn-success" id="checkoutButton">Thanh Toán</button>
          </div>
        </div>

      </section>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  <script src="./public/js/sale.js"></script>
</body>
</html>